<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?android:colorBackground"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/root">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout"
        android:paddingLeft="@dimen/horizontal_padding"
        android:paddingRight="@dimen/horizontal_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding">

        <TextView
            android:id="@+id/source_lang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="source"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/change_language_button"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/change_language_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="47dp"
            android:padding="0dp"
            android:layout_height="match_parent"
            android:text="â‡†"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/target_lang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="target"
            android:textAlignment="center"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/change_language_button"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <me.mlshv.simpletranslate.ui.widgets.TranslateInput
        android:id="@+id/translate_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:lines="6"
        android:scrollHorizontally="false"
        android:background="@drawable/translate_input_border"
        android:layout_below="@+id/relativeLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="38dp"
        android:layout_margin="@dimen/first_level_margin"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/strut"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/input_clear_button"
        android:layout_marginLeft="-42dp"
        android:layout_marginTop="4dp"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="right"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/ic_close_black_24dp"
        android:layout_alignTop="@+id/translate_input"
        android:layout_toRightOf="@+id/translate_input" />

    <TextView
        android:id="@+id/translation_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/translate_input"
        android:layout_toStartOf="@+id/translate_button_bar"
        android:layout_toEndOf="@+id/strut"
        android:visibility="invisible"
        android:scrollbars="vertical"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/yandex_api_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/translate_api_notice"
        android:layout_below="@+id/translation_result_text"
        android:layout_toStartOf="@+id/translate_button_bar"
        android:scrollbars="vertical"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/strut" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/variations_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/yandex_api_notice"
        android:layout_alignStart="@+id/translation_result_text"
        android:layout_toStartOf="@+id/translate_button_bar" />

    <ProgressBar
        android:id="@+id/translation_progress"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:padding="0dp"
        android:layout_marginRight="@dimen/first_level_margin"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/translate_button_bar" />

    <LinearLayout
        android:id="@+id/translate_button_bar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="0dp"
        android:layout_marginRight="@dimen/first_level_margin"
        android:layout_alignTop="@+id/translation_result_text"
        android:layout_alignParentEnd="true">

        <CheckBox
            android:id="@+id/favorite_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/starStyle"
            android:padding="0dp"
            android:clickable="true"
            android:theme="@style/favoriteCheckboxStyle" />

        <Button
            android:id="@+id/translation_copy_button"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/ic_content_copy_black_24dp" />
    </LinearLayout>
</RelativeLayout>