<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.mlshv.simpletranslate.ui.activities.AboutActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_about"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_mlshv_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/vertical_padding_large"
                android:background="@drawable/mlshv"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/text_about1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_mlshv_photo"
                android:paddingLeft="@dimen/horizontal_padding"
                android:paddingRight="@dimen/horizontal_padding"
                android:paddingTop="@dimen/vertical_padding_large"
                android:text="@string/about_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_api_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/translate_api_notice"
                android:paddingLeft="@dimen/horizontal_padding"
                android:paddingTop="@dimen/vertical_padding_large"
                android:paddingRight="@dimen/horizontal_padding"
                android:textSize="16sp"
                android:layout_below="@+id/text_about1"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
